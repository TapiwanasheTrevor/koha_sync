# Copy this file to .env and adjust for your environment.

# Connection string for pyodbc. Example targets SQL Server via ODBC driver 17.
DB_CONNECTION_STRING=Driver={ODBC Driver 17 for SQL Server};Server=localhost;Database=PastelDB;Uid=db_user;Pwd=db_password;

# Optional: instead of DB_CONNECTION_STRING, you can use these ODBC pieces.
#DB_DSN=PastelDSN
#DB_USERNAME=db_user
#DB_PASSWORD=db_password

# SQL query that returns student rows. Must include the columns used downstream.
STUDENTS_QUERY=SELECT reg_no, first_name, surname, email, phone, course, level FROM vw_students WHERE active = 1

# Optional filters appended to the query when ?active_only=true is set.
ACTIVE_WHERE_CLAUSE=AND active = 1

# Koha defaults applied to every payload.
KOHA_BRANCH=MAIN
KOHA_CATEGORY=STUD

# Optional static attributes that will be appended to every patron record.
# Use comma separated type=value pairs, e.g. faculty=Commerce,year=2024
KOHA_STATIC_ATTRIBUTES=

# Uvicorn/HTTP server configuration.
HOST=0.0.0.0
PORT=8100
